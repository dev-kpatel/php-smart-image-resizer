{
  "name": "dev-kpatel/php-smart-image-resizer",
  "type": "project",
  "require": {
    "php": "^8.2",
    "slim/slim": "^4.12",
    "slim/psr7": "^1.6",
    "intervention/image": "^3.8",
    "vlucas/phpdotenv": "^5.6",
    "php-di/php-di": "^7.1",
    "monolog/monolog": "^3.9"
  },
  "autoload": {
    "psr-4": {
      "Common\\": "@common/",
      "App\\": "src/"
   }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "start": "php -S localhost:8090 -t public",
    "clean-cache": "php bin/clean --days=30",
    "test": "php -d zend.exception_ignore_args=0 vendor/bin/phpunit"
  },

  "require-dev": {
    "phpunit/phpunit": "^11"
  }
}
